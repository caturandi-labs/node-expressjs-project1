extends layout

block content
 .row
  .col-md-8.col-md-offset-2
   h1 #{title}
   form(method='post', action='contact/send')
    .form-group
     label(for='name') Name
     input.form-control(required='required', type='text',name='nama',placeholder='Enter Name')
    .form-group
     label(for='email') Email
     input.form-control(type='email', required='required',name='email', placeholder='Enter E-Mail Address')
    .form-group
     label(for='message') Message
     textarea.form-control(name="message", cols="30", required='required',rows="5", placeholder='Enter Message')
    button.btn.btn-success(type='submit') Submit